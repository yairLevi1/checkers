    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "preLaunchTask": "tsc watch",
            "url": "${workspaceFolder}\\index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc watch",
            "program": "${workspaceFolder}\\build\\node_dev.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}